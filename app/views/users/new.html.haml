%section.vh-100{ style: "background-image: url('#{image_path('login_register_background.jpg')}'); background-size: cover; background-position: center; height: 100vh; width: 100vw; margin: 0; padding: 0; display: flex; justify-content: center; align-items: center;" }
  %div{ style: "background: rgba(0, 0, 0, 0.8); padding: 30px; border-radius: 8px; width: 400px; box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.5);" }
    %div{ style: "text-align: center; margin-bottom: 20px;" }
      %img{ src: image_path('logo.png'), alt: "Logo", style: "max-width: 100px;" }
    %h1{ style: "color: #ECF0F1; text-align: center; margin-bottom: 20px;" } Register
    - unless @user.nil?
      - if @user.errors.any?
        %ul
          - @user.errors.full_messages.each do |msg|
            %li= msg
    = form_with model: @user, url: register_path, local: true, class: "space-y-4" do |form|
      %div.form-group
        = form.label :name, "Name", style: "color: #BDC3C7; font-weight: bold;"
        = form.text_field :name, id: 'name_field', class: "form-control", placeholder: "Enter your name", style: "width: 100%; padding: 10px; border: 1px solid #1ABC9C; border-radius: 5px;"
      %div.form-group{ style: "margin-top: 20px;" }
        = form.label :email, "Email", style: "color: #BDC3C7; font-weight: bold;"
        = form.email_field :email, id: 'email_field', class: "form-control", placeholder: "Enter your email", style: "width: 100%; padding: 10px; border: 1px solid #1ABC9C; border-radius: 5px;"
      %div.form-group{ style: "margin-top: 20px;" }
        = form.label :password, "Password", style: "color: #BDC3C7; font-weight: bold;"
        = form.password_field :password, id: 'password_field', class: "form-control", placeholder: "Enter your password", style: "width: 100%; padding: 10px; border: 1px solid #1ABC9C; border-radius: 5px;"
      %div.form-group{ style: "margin-top: 20px;" }
        = form.label :password_confirmation, "Confirm Password", style: "color: #BDC3C7; font-weight: bold;"
        = form.password_field :password_confirmation, id: 'password_confirmation_field', class: "form-control", placeholder: "Confirm your password", style: "width: 100%; padding:10px; border:1px solid #1ABC9C; border-radius:5px;"
      %div.actions{ style: "margin-top: 20px;" }
        = form.submit "Create my account", id: 'create_account_button', class: "btn btn-primary", style: "width:100%; padding:10px; background-color:#1ABC9C; border:none; border-radius:5px; color:white; font-weight:bold;"

    %p{ style: "text-align: center; margin-top: 20px; color: #BDC3C7;" }
      Already have an account?
      = link_to "Log in here", login_path, style: "color: #1ABC9C;"