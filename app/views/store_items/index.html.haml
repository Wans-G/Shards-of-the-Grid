-# app/views/store_items/index.html.haml

%h1 STORE

%div{ id: "overlay", style: "display: none; position: fixed; top: 0; left: 0; width: 100%; height: 100%; background: rgba(0, 0, 0, 0.5); z-index: 999;" }

%div{ id: "popup-purchase-shards", style: "display: none; position: fixed; top: 50%; left: 50%; transform: translate(-50%, -50%); width: 50%; padding: 20px; background-color: #fff; border: 1px solid #ccc; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2); z-index: 1000;" }
  %h2 Purchase Shards
  %p Here you can purchase shards for your account.
  %button{ id: "close-popup-purchase", style: "background-color: #DB4437; color: #fff; padding: 10px; border: none; border-radius: 5px;" } Close

%div{ id: "popup-shard-store", style: "display: none; position: fixed; top: 50%; left: 50%; transform: translate(-50%, -50%); width: 50%; padding: 20px; background-color: #fff; border: 1px solid #ccc; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2); z-index: 1000;" }
  %h2 Shard Store
  %p Welcome to the Shard Store. Browse exclusive offers and items!
  %button{ id: "close-popup-store", style: "background-color: #DB4437; color: #fff; padding: 10px; border: none; border-radius: 5px;" } Close

%button{ id: "open-popup-purchase", style: "margin: 20px; padding: 10px; background-color: #2ECC71; color: #fff; border: none; border-radius: 5px;" }
  Purchase Shards

%button{ id: "open-popup-store", style: "margin: 20px; padding: 10px; background-color: #1ABC9C; color: #fff; border: none; border-radius: 5px;" }
  Shard Store

:javascript
  document.addEventListener("DOMContentLoaded", () => {
    const overlay = document.getElementById("overlay");

    const openPurchaseButton = document.getElementById("open-popup-purchase");
    const closePurchaseButton = document.getElementById("close-popup-purchase");
    const purchasePopup = document.getElementById("popup-purchase-shards");

    const openStoreButton = document.getElementById("open-popup-store");
    const closeStoreButton = document.getElementById("close-popup-store");
    const storePopup = document.getElementById("popup-shard-store");

    const closePopup = (popup) => {
      popup.style.display = "none";
      overlay.style.display = "none";
    };

    const openPopup = (popup) => {
      popup.style.display = "block";
      overlay.style.display = "block";
    };

    // Open "Purchase Shards" pop-up
    openPurchaseButton.addEventListener("click", () => openPopup(purchasePopup));

    // Close "Purchase Shards" pop-up
    closePurchaseButton.addEventListener("click", () => closePopup(purchasePopup));

    // Open "Shard Store" pop-up
    openStoreButton.addEventListener("click", () => openPopup(storePopup));

    // Close "Shard Store" pop-up
    closeStoreButton.addEventListener("click", () => closePopup(storePopup));

    // Close pop-ups when clicking outside
    overlay.addEventListener("click", () => {
      closePopup(purchasePopup);
      closePopup(storePopup);
    });
  });