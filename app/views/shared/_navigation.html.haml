%nav.navigation-bar{ style: "position: relative; width: 100%; height: 80px; display: flex; align-items: center; justify-content: space-between; padding: 0 20px;" }
  / Store Button (Left Side)
  %div.store-button-container{ style: "position: absolute; top: 10px; left: 20px;" }
    = render 'shared/store_button'

  / User Settings Panel (Right Side)
  %div.top-right{ style: "position: absolute; top: 10px; right: 20px;" }
    %div.profile
      %div.dropdown.custom-dropdown{ style: "text-align: center;" }
        %img{
          src: @current_user.profile_image.attached? ? url_for(@current_user.profile_image) : image_path('default_avatar.png'),
          alt: "Profile Picture",
          style: "width: 75px; height: 75px; border-radius: 50%; margin-top: 10px; margin-right: 15px; cursor: pointer; box-sizing: border-box",
          "data-bs-toggle" => "dropdown",
          id: "userDropdown"
        }
        %ul.dropdown-menu.dropdown-menu-end.custom-dropdown-menu{"aria-labelledby" => "userDropdown"}
          %li
            = link_to 'Settings', settings_path, class: 'dropdown-item custom-dropdown-item'
          %li
            = link_to 'Friends', friends_path, class: 'dropdown-item custom-dropdown-item'
          %li
            = link_to 'Dashboard', landing_path, class: 'dropdown-item custom-dropdown-item'
          %li
            = button_to 'Log Out', logout_path, method: :delete, class: 'dropdown-item custom-dropdown-item', id: 'logout_button'
