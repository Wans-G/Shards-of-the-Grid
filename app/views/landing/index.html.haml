%section.dashboard{ style: "display: flex; height: 100vh; background-color: #2C3E50; color: #ECF0F1; font-family: sans-serif; overflow: hidden;" }
  / Sidebar
  %aside.sidebar{ style: "width: 300px; background-color: #1ABC9C; padding: 20px; display: flex; flex-direction: column; justify-content: space-between;" }
    %div.logo
      %h1{ style: "color: #ECF0F1; font-size: 1.5rem; margin-bottom: 20px;" }
        %span Welcome back, #{@current_user.name}!
        %span The Grid awaits your return to Shards of the Grid.
        %span Let the Adventure Begin!
    %button{ style: "margin-bottom: 20px; background-color: #2ECC71; color: #ECF0F1; padding: 10px; border: none; border-radius: 5px; width: 100%; font-size: 1.2rem;" }
      Create Game
    %div.placeholder-game
      %div{ style: "background-color: #ECF0F1; padding: 10px; border-radius: 5px; margin-bottom: 10px;" }
        %p{ style: "color: #2C3E50; font-weight: bold;" }
          Game Name
        %img{ src: image_path('logo.png'), alt: "Game Placeholder", style: "width: 100%; border-radius: 5px; margin-bottom: 10px;" }
        %button{ style: "background-color: #1ABC9C; color: #ECF0F1; padding: 10px; border: none; border-radius: 5px; width: 100%;" }
          Join
  / Scrollable Game List Placeholder
  %div.scrollable-game-list{ style: "flex: 1; padding: 20px; overflow-y: scroll; -ms-overflow-style: none; scrollbar-width: none;" }
    %h2{ style: "color: #ECF0F1; margin-bottom: 20px;" } Games:
    / Placeholder games
    - 5.times do |i|
      %div.game-card{ style: "background-color: #4A235A; padding: 20px; border-radius: 5px; margin-bottom: 10px;" }
        %p{ style: "color: #ECF0F1; font-weight: bold;" }
          Placeholder Game #{i + 1}
        %p{ style: "color: #BDC3C7;" } Description or details here.
        %button{ style: "background-color: #2ECC71; color: #ECF0F1; padding: 5px 10px; border: none; border-radius: 5px; margin-top: 10px;" }
          Join
  / User Settings Panel
  -# %aside.user-settings{ style: "width: 300px; background-color: #4A235A; padding: 20px; display: flex; flex-direction: column; justify-content: flex-start; position: absolute; top: 0; right: 0;" }
  %div.profile
    %div.dropdown.custom-dropdown{ style: "text-align: center;" }
  %img{
  src: image_path('logo.png'),
  alt: "Profile Picture",
  class: "dropdown-toggle",
  id: "userDropdown",
  "data-bs-toggle" => "dropdown",
  style: "width: 65px; height: 65px; border-radius: 50%; margin-top: 10px; margin-right: 15px; cursor: pointer; box-sizing: border-box"
}
  %ul.dropdown-menu.dropdown-menu-end.custom-dropdown-menu{"aria-labelledby" => "userDropdown"}
    %li
      = link_to 'Settings', settings_path, class: 'dropdown-item custom-dropdown-item'
    %li
      = link_to 'Friends', friends_path, class: 'dropdown-item custom-dropdown-item'
    %li
      = button_to 'Log Out', logout_path, method: :delete, class: 'dropdown-item custom-dropdown-item', id: 'logout_button'