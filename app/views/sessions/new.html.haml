%div{ style: "background-image: url('#{image_path('login_register_background.jpg')}'); background-size: cover; background-position: center; height: 100vh; width: 100vw; margin: 0; padding: 0; display: flex; justify-content: center; align-items: center;" }
  %div{ style: "background: rgba(0, 0, 0, 0.7); padding: 20px; border-radius: 8px;" }
    %h1{ style: "color: white;" } Sign In
    = form_tag users_path, method: 'post' do
      = label :session, :email, 'email', for: 'email_field', style: "color: white;"
      = text_field :session, :email, id: 'email_field'
      = label :session, :password, 'Password', for: 'password_field', style: "color: white;"
      = password_field :session, :password, id: 'password_field'
      = submit_tag 'Sign in', id: 'sign_in_button', style: "background-color: white; color: black;"
    %p
      = link_to 'Forgot Password?', new_password_reset_path, style: "color: white;"


    %p.google-login
      = button_to 'Login with Google', '/auth/google_oauth2', method: :post, id: 'google_login_button'
    %p.register
      = button_to 'Register New Account', register_path, method: :get, id: 'register_button'