.quest-overlay{ style: "position: fixed; top: 80px; right: 20px; width: 300px; background: rgba(0,0,0,0.8); color: white; padding: 20px; display: none; z-index: 999;" }
  %h3 Quests
  - quests.each do |quest|
    - quest_type = quest["quest_type"]
    - condition = quest["condition"]
    - progress = quest["progress"]
    - reward = quest["reward"]
    %div.quest-item
      - if quest_type == 1
        - quest_description = "Type #{condition} times in the chat box"
      - elsif quest_type == 2
        - quest_description = "Use the item #{condition} times"
      - elsif quest_type == 3
        - quest_description = "Successfully found #{condition} equipments"
      - else
        - quest_description = "Unknown quest"


      %p= "#{quest_description} (Reward: #{reward} shards)"
      .progress-bar-container{ style: "background:#555; width:100%; height:20px; border-radius:5px; margin-bottom:10px;" }
        .progress-bar{ style: "width:#{(progress.to_f/condition)*100}%; background:#3c3; height:100%; border-radius:5px;" }

  %button#close-quest-overlay.btn.btn-secondary.mt-3 Close
